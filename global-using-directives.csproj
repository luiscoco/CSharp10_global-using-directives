<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>global_using_directives</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	 <!--In the following line we enable the Global Using Directives-->
	<EnableGlobalUsingDirectives>true</EnableGlobalUsingDirectives>
  </PropertyGroup>

</Project>
